<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/imageadvanced"
        android:id="@+id/imageBookNameAdvanced"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        android:text= "Book's name: "
        android:id="@+id/publisherAdvanced"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageBookNameAdvanced"
        android:layout_toEndOf="@+id/imageBookNameAdvanced"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height= "40dp"
        android:text="@string/make_test_one"
        android:textAllCaps="false"
        android:id="@+id/btnTestOne"
        android:background="@drawable/button_states"
        android:textSize="12dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignBottom="@+id/imageBookNameAdvanced"
        android:layout_toRightOf="@+id/imageBookNameAdvanced" />

    <Button
        android:layout_width="100dp"
        android:layout_height= "40dp"
        android:text="@string/make_test_two"
        android:textAllCaps="false"
        android:id="@+id/btnTestTwo"
        android:background="@drawable/button_states"
        android:textSize="12dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignTop="@+id/btnTestOne"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>