<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/padding"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/imageadvanced"
        android:id="@+id/imageBookNameAdvanced"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        android:text= "Book's name: "
        android:id="@+id/publisherAdvanced"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageBookNameAdvanced"
        android:layout_toEndOf="@+id/imageBookNameAdvanced"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height= "40dp"
        android:text="Start"
        android:textAllCaps="false"
        android:id="@+id/btnStart"
        android:background="@drawable/button_states"
        android:textSize="20dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignBottom="@+id/imageBookNameAdvanced"
        android:layout_toRightOf="@+id/imageBookNameAdvanced"
        android:layout_toEndOf="@+id/imageBookNameAdvanced" />
</RelativeLayout>
